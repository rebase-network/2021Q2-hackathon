<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_toast_layout_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="184dp"
    android:minHeight="164dp"
    android:background="@drawable/common_toast_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/common_toast_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/common_toast_image_right"
        android:gravity="center"
        android:padding="0dp"
        android:text="The request has been sent.Please wait for a moment."
        android:textColor="@color/white" />

</LinearLayout>