<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip" />

            <gradient
                android:angle="270"
                android:centerColor="#11000000"
                android:centerY="0.75"
                android:endColor="#11000000"
                android:startColor="#11000000" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#800077dd"
                    android:centerY="0.75"
                    android:endColor="#a00077dd"
                    android:startColor="#800077dd" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#ff42c958"
                    android:centerY="0.75"
                    android:endColor="#ff42c958"
                    android:startColor="#ff42c958" />
            </shape>
        </clip>
    </item>

</layer-list>