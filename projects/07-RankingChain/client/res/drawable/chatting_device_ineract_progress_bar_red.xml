<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip" />

            <gradient
                android:angle="270"
                android:centerColor="#ffd0cecf"
                android:centerY="0.75"
                android:endColor="#ffd0cecf"
                android:startColor="#ffd0cecf" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#80CC3300"
                    android:centerY="0.75"
                    android:endColor="#a0CC3300"
                    android:startColor="#80CC3300" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#ffCC3300"
                    android:centerY="0.75"
                    android:endColor="#ffCC3300"
                    android:startColor="#ffCC3300" />
            </shape>
        </clip>
    </item>
</layer-list>